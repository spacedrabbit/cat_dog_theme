{{!< default}}
{{#if post}}
{{#post}}
<title>{{title}} | {{@blog.title}}</title>
{{/post}}
{{else}}
<title>{{@blog.title}}</title>
{{/if}}

{{ghost_head}}
</head>

<body class="{{body_class}}">
<div class="wrapper">

{{! Menu }}
{{#if post}}
<nav class="nav fixed">
{{else}}
<nav class="nav">
{{/if}}
    <a id="logo" href="{{@blog.url}}"><h1>{{@blog.title}}</h1></a>
    <span id="author-name">by {{author}}</span>
    <ul class="nav-primary">
        {{#has author="Cassie Tarakajian"}}
            <li><a href="https://github.com/catarak">GitHub</a></li>
            <li><a href="http://people.flatironschool.com/profiles/cassie-tarakajian">FIS Profile</a></li>
            <li><a href="https://twitter.com/hellothisiscass">Twitter</a></li>
        {{/has}}
        {{#has author="Louis Tur"}}
            <li><a href="https://github.com/spacedrabbit">GitHub</a></li>
            <li><a href="http://people.flatironschool.com/profiles/louis-tur">FIS Profile</a></li>
            <li><a href="https://www.linkedin.com/in/louistur/">LinkedIn</a></li>
        {{/has}}
    </ul>
</nav>
<div id="home">
    <div class="posts">
        <nav class="art-list">
            <ul class="art-list-body">
                <li class="art-list-item">
                  <div>
                    <img id="author-image" src="{{author.image}}">
                  </div>
                  <div class="author-bio">
                    <h3>{{author.name}}</h3>
                    <p>{{author.bio}}</p>
                  </div>
                  
                </li>
                {{> "loop"}}
            </ul>
        </nav>
    </div>
</div>

<footer class="footer">
{{pagination}}
