{{!< default}}
{{#if post}}
{{#post}}
<title>{{title}} | {{@blog.title}}</title>
{{/post}}
{{else}}
<title>{{@blog.title}}</title>
{{/if}}

{{ghost_head}}
</head>

<body class="{{body_class}}">
<div class="wrapper">

{{! Menu }}
{{#if post}}
<nav class="nav fixed">
{{else}}
<nav class="nav">
{{/if}}
    <a id="logo" href="{{@blog.url}}"><h1>{{@blog.title}}</h1></a>
    <ul class="nav-primary">
        <li><a href="{{@blog.url}}/author/cassie">Cassie</a></li>
        <li><a href="{{@blog.url}}/author/louis">Louis</a></li>
    </ul>
</nav>
<div id="home">
    <div class="posts">
        <nav class="art-list">
            <ul class="art-list-body">
                <li class="art-list-item">
                  <div class="author-bio">
                    <img id="author-image" src="{{author.image}}">
                    <h3>{{author.name}}</h3>
                    <p>{{author.bio}}</p>
                    {{#has author="Cassie Tarakajian"}}
                    <a class="fa fa-twitter social-icon" href="https://twitter.com/hellothisiscass"></a>
                    <a class="fa fa-github social-icon" href="https://github.com/catarak"></a>
                    <a class="fa fa-code social-icon" href="http://people.flatironschool.com/profiles/cassie-tarakajian"></a>
                    {{/has}}
                    {{#has author="Louis Tur"}}
                    <a class="fa fa-linkedin-square social-icon" href="https://www.linkedin.com/in/louistur/"></a>
                    <a class="fa fa-github social-icon" href="https://github.com/spacedrabbit"></a>
                    <a class="fa fa-code social-icon" href="http://people.flatironschool.com/profiles/louis-tur"></a>
                    {{/has}}
                  </div>     
                </li>
                {{> "loop"}}
            </ul>
        </nav>
    </div>
</div>

<footer class="footer">
{{pagination}}
